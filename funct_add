#include<iostream>
using namespace std;
/*creating a function*/

int sum (int a,int b);
    int c;
    c=a+b;
return c;

/*means it will return c value */
/*now main func*/
int main()
{
cout<<sum(5,6)<<endl;
cout<<sum(6,4)<<end;
return 0;
}
/*OUTPUT:
11
10
*/

///// cin & sum
#include <iostream>
using namespace std;

void calculator(int x, int y) 
{

int sum = x + y;
cout << "Your sum is " << sum;
}

int main() 
{
cout << "Hello, please input your numbers" << endl;
int x1, y1;
cin >> x1 >> y1;
calculator(x1, y1); // connection x,y und x1,y1 beachten
return 0;
}
